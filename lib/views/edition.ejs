<% include head %>
  <ol class="breadcrumb">
    <li><a href="/<%= group.name %>"><%= group.name %></a></li>
    <li><a href="/<%= group.name %>/<%= work.title %>"><%= work.title %></a></li>
    <li><%= edition.label %></li>
  </ol>
  <% annotatedEdition.find('body > div[type=Book]').forEach(function(div) {  %>
    <% var lineNumber = 1 %>
    <section class="<%= div.attr('type') %>">
      <% div.find('p').forEach(function(p) { %>
        <div class="paragraph">
          <% p.find('l').forEach(function(l, i) { %>
            <div class='line'>
              <div class='row'>
                <div class='col-xs-1 col-sm-1 col-md-1'><a class='line-number'><%= lineNumber++ %></a></div>
                <div class='words col-xs-11 col-sm-11 col-md-11'>
                  <% l.find('annotation').forEach(function(annotation) { -%>
                    <span class="lemma-<%= annotation.annotation().lemma %>" id="<%= annotation.annotation().sentenceId + '-' + annotation.annotation().id %>" data-annotation="<%= JSON.stringify(annotation.annotation()) %>"><%= annotation.text() %></span>
                  <% }) -%>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% }) %>
    </section>
  <% }) %>
<% include foot %>
